<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_color"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true">

    <TableLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingTop="10dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/person_name_label"
                    android:textAlignment="center"
                    android:textColor="#0174DF"
                    android:fontFamily="@font/lemonmilk"
                    android:textStyle="italic"
                    android:textSize="25dp"
                    android:background="@drawable/border2"
                    android:layout_marginBottom="5dp"
                    android:text="ACCIDENT MAP"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ifade"
                    android:textAlignment="center"
                    android:textColor="#ffff"
                    android:fontFamily="@font/lemonmilk"
                    android:text="ACCIDENT MAP KEYs"
                    android:textSize="20dp"


                    />





            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_weight="0.5"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/info1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/blue"
                    android:layout_gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:background="@drawable/roundnew"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/info2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/purple"
                    android:layout_gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:background="@drawable/roundnew"
                    />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="This icon represent                                                                       100 - 199 died people"
                    android:textAlignment="center"
                    android:fontFamily="@font/lemonmilk"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:fontFamily="@font/lemonmilk"
                    android:textStyle="bold"
                    android:text="This icon represent                                                                      200- 299 died people"
                    android:textAlignment="center" />



            </LinearLayout>

        </LinearLayout>


        //2.satır-------------------------------------

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_weight="0.5"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/info3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/orange"
                    android:layout_gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:background="@drawable/roundnew"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <ImageView
                    android:id="@+id/info4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/red"
                    android:layout_gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:background="@drawable/roundnew"
                    />


            </LinearLayout>
            -


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="This icon represent                                                                      300 - 399 died people"
                    android:textAlignment="center"
                    android:fontFamily="@font/lemonmilk"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.5"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:textSize="15dp"
                    android:fontFamily="@font/lemonmilk"
                    android:textStyle="bold"
                    android:text="This icon represent                                                      400+ died people"
                    android:textAlignment="center" />



            </LinearLayout>

            -
        </LinearLayout>
        //3.satır---------------------------------------------
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="115dp"
                android:layout_weight="0.5"
                android:paddingTop="10dp"
                android:orientation="vertical">

                <Button
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:id="@+id/mapButton"
                    android:background="@drawable/border2"
                    android:layout_gravity="center"
                    android:fontFamily="@font/lemonmilk"
                    android:text="PROCEED TO MAP"
                    android:textSize="15dp"
                    android:textColor="@color/colorPrimaryDark"
                    />


            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">





            -
        </LinearLayout>
        // 4. satır------------------------------------


    </TableLayout>

</ScrollView>


